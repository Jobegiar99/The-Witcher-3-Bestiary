        <TextBlock x:Name="txt_Name" FontFamily="Faith Collapsing" FontSize="50" HorizontalAlignment="Left" Margin="350,50,0,0" Text="_NAME_" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Name="txt_Description" TextAlignment="Justify" HorizontalAlignment="Left" Margin="74,163,0,0" Text="_DESCRIPTION_" FontSize="20" FontFamily="Faith Collapsing" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="-1.377,-2.712" Height="377" Width="883"/>



        <TextBlock Name="txt_Ocurrence" FontSize="25"  FontFamily="Faith collapsing" HorizontalAlignment="Left" Margin="111,568,0,0" Text="Ocurrence: " TextWrapping="Wrap" VerticalAlignment="Top" Width="583"/>
        <TextBlock x:Name="txt_Loot" FontSize="25"  FontFamily="Faith collapsing" HorizontalAlignment="Left" Margin="111,633,0,0" Text="Loot: " TextWrapping="Wrap" VerticalAlignment="Top" Width="1351" Height="110"/>
        <TextBlock x:Name="txt_Susceptibility" FontSize="25"  FontFamily="Faith collapsing" HorizontalAlignment="Left" Margin="770,568,0,0" Text="Susceptibility: " TextWrapping="Wrap" VerticalAlignment="Top" Width="666" Height="70"/>
    </Grid>
</Page>
